FROM postgres:16-alpine

# Install build dependencies
RUN apk add --no-cache \
    git \
    build-base \
    clang15 \
    llvm15

# Clone and build pgvector
RUN cd /tmp && \
    git clone --branch v0.5.1 https://github.com/pgvector/pgvector.git && \
    cd pgvector && \
    make && \
    make install

# Cleanup
RUN apk del git build-base clang15 llvm15 && \
    rm -rf /tmp/pgvector

# Set default command
CMD ["postgres"]
